@page
@model RegisterModel
@{
    ViewData["Title"] = "Be the next Voyager! Join Now!";
}

<link rel="stylesheet" href="css/signup.css" />

<h1 class="col-5 mt-3 display-4">@ViewData["Title"]</h1>
 
   
<div class="row mt-2">
    
    <div class="col-md-8 ">
        <form class="w-50 justify-content-center" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" >
            <h2>Create a new account!</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            <div class="form-floating mb-2"style="color:black;">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            
            <div class="form-floating mb-2 "style="color:black;">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                @*<button id="show_password" class="btn btn-primary" type="button" ><i class="fa fa-eye-slash icon"></i></button> *@
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2"style="color:black;">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mx-5"><a class="mb-2 text-decoration-none text-light ms-5"  asp-area="Identity" asp-page="/Account/Login" >Already a Memeber?Sign In!</a></div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary ">Register</button>
        </form>
    </div>
    <div class="col-md-4 text-white ">
        <div class="box-container mt-2 ">

        <div class="box text-light" data-aos="fade-up" data-aos-delay="150">
            <a asp-area="" asp-controller="Home" asp-action="Index" class=" display-6 text-decoration-none text-light"> <i class="fas fa-globe"></i> Voyager </a>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Obcaecati, ad?</p>
            <div class="share">
                <a href="#" class="fab fa-facebook-f"></a>
                <a href="#" class="fab fa-twitter"></a>
                <a href="#" class="fab fa-instagram"></a>
                <a href="#" class="fab fa-linkedin"></a>
            </div>
        </div>
          <div class="box" data-aos="fade-up" data-aos-delay="450">
            <h3>contact info</h3>
            <p> <i class="fas fa-map"></i> Beirut,Lebanon </p>
            <p> <i class="fas fa-phone"></i> +961 ####### </p>
            <p> <i class="fas fa-envelope"></i> Voyager@gmail.com </p>
            <p> <i class="fas fa-clock"></i> 24/7 </p>
        </div>
        </div>
    </div>

</div>
    





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
