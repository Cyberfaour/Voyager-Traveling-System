<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Voyager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Voyager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
   
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"> </script>
    <link rel=" stylesheet" href="~/css/access.css" />
</head>
<body class="text-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow " >
            <div class="container-fluid mx-5  px-5">
              
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-globe"></i> Voyager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item justify-content-center">
                            <a class="nav-link text-dark " asp-area="" asp-controller="Admin" asp-action="Dashboard" >Dashboard</a>
                        </li>
                        
                       <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Create">Create New Trip</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="PostsIndex">Feed</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="CreatePost">New Post</a>
                        </li>
                       
                       
                    </ul>
                 
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="banner ">
     <div class="content" >
       
        <h3>Welcome back Admin</h3>
        
      </div>
    
</div>
<script>AOS.init({
        duration: 800,
        offset:150,
    });</script>
    <div class="container col-12  justify-content-center"  >
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>
     
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
